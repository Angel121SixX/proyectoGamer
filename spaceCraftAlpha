    def redrawGameWindow():
        w.blit(bg, (0,0))
        pygame.display.update()

    run = True
    while run:
        clock.tick(16.33)
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                run = False

        redrawGameWindow()

    pygame.quit()


